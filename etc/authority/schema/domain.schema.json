{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://canon.chitty.cc/schemas/domain.schema.json",
  "title": "Domain Entity",
  "type": "object",
  "required": ["domain_name", "entity_type", "owner_entity", "status"],
  "properties": {
    "domain_name": { "type": "string" },
    "entity_type": { "type": "string", "enum": ["Domain"] },
    "owner_entity": { "type": "string" },
    "status": { "type": "string", "enum": ["Planned", "Active", "Deprecated"] },
    "dns_provider": { "type": "string" },
    "ssl": { "type": "string", "enum": ["Managed", "Custom", "None"] },
    "aliases": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}
