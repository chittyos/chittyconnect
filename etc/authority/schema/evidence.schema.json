{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://canon.chitty.cc/schemas/evidence.schema.json",
  "title": "ChittyOS Evidence Artifact",
  "type": "object",
  "required": ["evidence_id", "evidence_type", "source"],
  "properties": {
    "evidence_id": { "type": "string" },
    "evidence_type": {
      "type": "string",
      "enum": ["Pleading", "CourtOrder", "Discovery", "Privileged", "Administrative", "Other"]
    },
    "source": { "type": "string" },
    "case_id": { "type": "string" },
    "received_at": { "type": "string", "format": "date-time" },
    "classification": { "type": "string", "enum": ["Public", "Internal", "Confidential", "Restricted"] }
  },
  "additionalProperties": false
}

