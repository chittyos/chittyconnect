{
  "name": "@chittyos/chittyconnect",
  "version": "2.0.2",
  "description": "ChittyConnect - AI-intelligent spine with ContextConsciousness™ & MemoryCloude™ for ChittyOS ecosystem",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "chittyconnect-mcp": "./mcp-server.js"
  },
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "format:check": "prettier -c 'src/**/*.{js,ts,json}'",
    "mcp:start": "node mcp-server.js",
    "mcp:test": "DEBUG=true node mcp-server.js",
    "mcp:setup": "./scripts/setup-mcp.sh",
    "mcp:setup:desktop": "./scripts/setup-mcp.sh desktop",
    "mcp:setup:code": "./scripts/setup-mcp.sh code",
    "test:scenarios": "vitest run --config tests/scenarios/vitest.config.js"
  },
  "keywords": [
    "chittyos",
    "github",
    "app",
    "integration",
    "mcp",
    "cloudflare",
    "workers"
  ],
  "author": "ChittyOS",
  "license": "Apache-2.0",
  "files": [
    "src",
    "mcp-server.js",
    "wrangler*.toml",
    "scripts/*.sh",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.2.2",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@neondatabase/serverless": "^0.10.4",
    "hono": "^4.11.4",
    "jose": "^5.2.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "vitest": "^4.0.8",
    "wrangler": "^4.59.1"
  },
  "lint-staged": {
    "src/**/*.{js,ts,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
