{
  "name": "chittyconnect",
  "version": "1.0.0",
  "description": "ChittyConnect - The Alchemist. Universal adapter layer for ChittyOS.",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:local": "wrangler dev --local",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy",
    "tail": "wrangler tail",
    "tail:staging": "wrangler tail --env staging",
    "provision": "./scripts/provision-infrastructure.sh all",
    "provision:prod": "./scripts/provision-infrastructure.sh production",
    "provision:staging": "./scripts/provision-infrastructure.sh staging",
    "secrets": "./scripts/configure-secrets.sh all",
    "secrets:prod": "./scripts/configure-secrets.sh production",
    "secrets:staging": "./scripts/configure-secrets.sh staging",
    "db:migrate": "cat migrations/*.sql | wrangler d1 execute chittyconnect --command=-",
    "db:migrate:staging": "cat migrations/*.sql | wrangler d1 execute chittyconnect-staging --env staging --command=-",
    "db:query": "wrangler d1 execute chittyconnect --command",
    "db:query:staging": "wrangler d1 execute chittyconnect-staging --env staging --command"
  },
  "keywords": ["chittyos", "connect", "alchemist", "adapter"],
  "author": "ChittyOS",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}
